<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#44000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Content Layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" /> <!-- Set your desired item background color here -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
